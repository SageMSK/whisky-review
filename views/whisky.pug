extends layout

block content
  a(href="/whiskies") Back to Whiskies

  .review
    h2= title
    
    if user && review.author.equals(user._id)
      a(href=`/whisky/${review._id}/edit` class="button") Edit
    
    p By #{review.author.firstName} at #{h.moment(review.created).format("MMMM Mo YYYY, h:mm a")}
    
    .review__rating
      p #{review.rating} / 10

    .review__info
      p Info: #{review.description}

    .review__details
      p Nose: #{review.nose}
      p Taste:  #{review.taste}
      p Finish:  #{review.finish}