extends layout

block content
  .review
    a.back-to-index(href="/whiskies") Back to Whiskies
    h2.review__title #{review.name}
      if user && review.author.equals(user._id)
        a.button.review__button(href=`/whisky/${review._id}/edit`) Edit
    
    p By #{review.author.firstName} at #{h.moment(review.created).format("MMMM Mo YYYY, h:mm a")}
    
    .review__rating
      p #{review.rating} / 10

    .review__info
      p Info: #{review.description}

    .review__details
      p.review__details--nose Nose: #{review.nose}
      p.review__details--taste Taste:  #{review.taste}
      p.review__details--finish Finish:  #{review.finish}